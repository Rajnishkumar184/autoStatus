extends layout

block content
  .status.col-md-offset-1(ng-controller="statusCtrl")
    form(name="statusForm", no-validate, ng-submit="submit()")
      .row
        .col-md-6
          div.form-horizontal
            div.form-group
              label.col-md-2.text-primary(for="user") User : 
              select#user.col-md-6.well(name="userSelect", ng-model="status.user", required)
                option(value="") Select your name
                optgroup(label="Name")
                  option(value="1") Ram
                  option(value="2") Pankaj
                  option(value="3") Adwitiya
                  option(value="4") Rani
                  option(value="5") Madhuri
      .row
        .col-md-6
          div.form-group
            label.text-primary(for="today") What was done Today :
            textarea(ckeditor="options",ng-model="status.today",required)
        .col-md-6
          div.form-group
            label.text-primary(for="tomorrow") What is planned for tomorrow :
            textarea(ckeditor="options",ng-model="status.tomorrow",required)
      .row
        .col-md-6
          div.form-group
            label.text-primary(for="risks") Risks :
            textarea(ckeditor="options",ng-model="status.risks",required)
      .row
        .col-md-3
          button(name="submit", value="submit").btn-primary.btn Submit
      
  
